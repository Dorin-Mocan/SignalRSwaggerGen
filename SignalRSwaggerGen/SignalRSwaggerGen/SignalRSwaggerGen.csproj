<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <SignAssembly>false</SignAssembly>
    <EnableNETAnalyzers>true</EnableNETAnalyzers>
    <Authors>Dorin Mocan</Authors>
    <Company></Company>
    <Description>This package can be used to generate Swagger documentation for SignalR hubs.</Description>
    <PackageTags>swagger openapi open api swashbuckle swaggergen documentation signalr hub websocket wss rest api</PackageTags>
    <PackageProjectUrl>https://github.com/Dorin-Mocan/SignalRSwaggerGen</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Dorin-Mocan/SignalRSwaggerGen</RepositoryUrl>
    <Version>2.0.3</Version>
    <PackageReleaseNotes>1. Added auto-discover for methods and method args
2. Added restriction for methods(only public non-static supported)
3. Documentation enrichment
4. Made attributes non-inheritable
5. Trim leading "I" from interface name</PackageReleaseNotes>
    <AssemblyVersion>2.0.3.0</AssemblyVersion>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DocumentationFile>C:\Projects\SignalRSwaggerGen\SignalRSwaggerGen\SignalRSwaggerGen\SignalRSwaggerGen.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\.editorconfig" Link=".editorconfig" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Swashbuckle.AspNetCore.SwaggerGen" Version="6.1.4" />
  </ItemGroup>

</Project>
